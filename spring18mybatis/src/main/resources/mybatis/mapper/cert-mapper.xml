<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cert">
	<!-- 인증번호 등록 기능 -->
	<insert id="insert" parameterType="CertDto">
		insert into cert(who, serial, when) values(#{who}, #{serial}, sysdate)
	</insert>
	
	<!-- 삭제  -->
	<delete id="delete" parameterType="String">
		delete cert where who = #{who}
	</delete>
	
	<!-- 인증번호 검사 기능 -->
	<select id="check" parameterType="CertDto" resultType="CertDto">
		select * from cert where who = #{who} and serial = #{serial} 
		<!-- 5분 이내에 생성된 데이터인가? -->
		and 
		when >= sysdate - 5/24/60 
	</select>
	
	<!--  시간이 5분 이상 지난 인증정보를 삭제  -->
	<delete id="clear">
	<![CDATA[
		delete cert where <= sysdate -5/24/60
	]]>
	</delete>
	
</mapper>